{
  "name": "aurelia-tools",
  "displayName": "Aurelia Tools",
  "description": "An Aurelia 2 toolbelt that will simplify your life üòÅ",
  "version": "2.0.0",
  "icon": "images/icon.png",
  "publisher": "brandonseydel",
  "author": {
    "name": "Brandon Seydel"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brandonseydel/aurelia-toolbelt"
  },
  "bugs": {
    "url": "https://github.com/brandonseydel/aurelia-toolbelt/issues"
  },
  "keywords": [
    "Aurelia 2",
    "aurelia-cli",
    "aurelia",
    "TypeScript",
    "Templates"
  ],
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "html": {
      "customData": [
        "./data/aurelia-html-contribution.json"
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Aurelia Toolbelt Configuration Settings",
      "properties": {
        "aurelia2-files.menu.custom-element": {
          "type": "boolean",
          "default": true,
          "description": "Shows or hides the menu item."
        },
        "aurelia2-files.menu.custom-element-html": {
          "type": "boolean",
          "default": true,
          "description": "Shows or hides the menu item."
        },
        "aurelia2-files.menu.custom-attribute": {
          "type": "boolean",
          "default": true,
          "description": "Shows or hides the menu item."
        }
      }
    },
    "languages": [
      {
        "id": "html",
        "order": 1,
        "extensions": [
          ".html",
          ".htm",
          ".shtml",
          ".xhtml",
          ".mdoc",
          ".jsp",
          ".asp",
          ".aspx",
          ".jshtm",
          ".volt",
          ".ejs",
          ".au"
        ],
        "aliases": [
          "HTML",
          "htm",
          "html",
          "xhtml"
        ],
        "mimetypes": [
          "text/html",
          "text/x-jshtm",
          "text/template",
          "text/ng-template",
          "application/xhtml+xml"
        ],
        "embeddedLanguages": {
          "text.html": "html",
          "source.css": "css",
          "source.js": "javascript",
          "source.python": "python",
          "source.smarty": "smarty"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      },
      {
        "language": "html",
        "path": "./snippets/html.json"
      }
    ],
    "commands": [
      {
        "command": "extension.generateAureliaProject",
        "title": "Generate Aurelia Application"
      },
      {
        "command": "extension.addAureliaCustomElement",
        "title": "Generate Custom Element"
      },
      {
        "command": "extension.addAureliaCustomElementHtml",
        "title": "Generate Custom Element Html Only"
      },
      {
        "command": "extension.addAureliaCustomAttribute",
        "title": "Generate Custom Attribute"
      }
    ],
    "grammars": [
      {
        "language": "html",
        "scopeName": "au.html",
        "path": "./syntaxes/html.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "config.aurelia2-files.menu.custom-element",
          "command": "extension.addAureliaCustomElement",
          "group": "Aurelia2"
        },
        {
          "when": "config.aurelia2-files.menu.custom-element-html",
          "command": "extension.addAureliaCustomElementHtml",
          "group": "Aurelia2"
        },
        {
          "when": "config.aurelia2-files.menu.custom-attribute",
          "command": "extension.addAureliaCustomAttribute",
          "group": "Aurelia2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack --devtool nosources-source-map --config ./build/node-extension.webpack.config.js",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/node-extension.webpack.config.js",
    "package": "webpack --mode production --config ./build/node-extension.webpack.config.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@aurelia/testing": "dev",
    "@ts-morph/bootstrap": "^0.7.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "aurelia": "dev",
    "copy-webpack-plugin": "^6.3.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "mocha": "^8.1.3",
    "node-html-parser": "^2.0.0",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
